<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dd="clr-namespace:LaborProject.Modules.Shell.ViewModels"
    x:Class="LaborProject.Modules.Shell.Views.ApplicationSettingsView" mc:Ignorable="d" d:DesignHeight="300"
    d:DesignWidth="300" d:DataContext="{d:DesignInstance dd:ApplicationSettingsViewModel}">
    <Grid>
        <CheckBox IsChecked="{Binding ConfirmExit}">Confirm application exit</CheckBox>
    </Grid>
</UserControl>